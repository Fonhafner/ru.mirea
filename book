package com.company;
import java.lang.*;
public class Book {
    public int page;
    public  String author;
    public  Book(String a, int p){
        author = a;
        page = p;
    }

    public void setPage(int page){
        this.page = page;

    }

    public void setAuthor(String author){
        this.author = author;
    }

    public  int getPage(){
        return  page;
    }

    public String getAuthor(){
        return author;
    }

    public void infoBook(){
        System.out.println(getAuthor() +" pages = " + getPage());
    }
}
