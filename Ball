package com.company;
import java.lang.*;

public class Ball {
    public int size;
    public String brand;
    public Ball(String b, int s){
        brand = b;
        size = s;
    }

    public void setBrand(String brand){
        this.brand = brand;
    }

    public void setSize(int size){
        this.size = size;
    }

    public  String getBrand(){
        return  brand;
    }

    public int getSize(){
        return size;
    }
    public void infoBall(){
        System.out.println(brand+", size - "+ size);
    }
}
